@model IEnumerable<SourceCode.Models.QuestionTbl>;

@{
    ViewData["Title"] = "Questions";
}

<div class="grid-SEES col-md-9">
    <div>
        @Html.ActionLink("New Question +", "CreateQuestion", "Examination", null, new {@class = "btn btn-primary"})
    </div>
    <div>
        <table class="table-SEES">
            <tr>
                <th>Question</th>
                <th>Course</th>
                <th>Type</th>
                <th>Total Mark</th>
                <th></th>
            </tr>
        @foreach (var ques in Model)
        {
            <tr>
                <td>@ques.QuesTitle</td>
                <td>@ques.CourseId</td>
                <td>@ques.QuesType</td>
                <td>@ques.TotalMark</td>
                <td>
                    @Html.ActionLink("Edit Question", "EditQuestion", new { id = ques.QId }, new {@class = "btn btn-primary"})
                    &emsp;
                    @Html.ActionLink("Delete", "DeleteQuestion", new { id = ques.QId }, new {@class = "btn btn-primary"})
                </td>
            </tr>
        }
        </table>
    </div>
</div>

