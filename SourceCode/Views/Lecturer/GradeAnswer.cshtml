        </div>

        <div class="form-group">
            <Label for="Ans3">@exam.Q03Navigation.QuesTitle</Label>
            <input type="text" class="form-control" id="Ans3" name="Ans3" value="@Model.Ans3" disabled />
            @if (exam.Q03Navigation.CorrectCh != null)
            {
                <p>Correct Answer: @exam.Q03Navigation.CorrectCh</p>
            }
        </div>

        <div class="form-group">
            <Label for="Ans4">@exam.Q04Navigation.QuesTitle</Label>
            <input type="text" class="form-control" id="Ans4" name="Ans4" value="@Model.Ans4" disabled />
            @if (exam.Q04Navigation.CorrectCh != null)
            {
                <p>Correct Answer: @exam.Q04Navigation.CorrectCh</p>
            }
        </div>

        <div class="form-group">
            <Label for="Ans5">@exam.Q05Navigation.QuesTitle</Label>
            <input type="text" class="form-control" id="Ans5" name="Ans5" value="@Model.Ans5" disabled />
            @if (exam.Q05Navigation.CorrectCh != null)
            {
                <p>Correct Answer: @exam.Q05Navigation.CorrectCh</p>
            }
        </div>

        @* Exam Questions *@
        @if (exam.Type == "Exam")
        {
            <div class="form-group Exam">
                <Label for="Ans6">@exam.Q06Navigation.QuesTitle</Label>
                <input type="text" class="form-control" id="Ans6" name="Ans6" value="@Model.Ans6" disabled />
                @if (exam.Q06Navigation.CorrectCh != null)
                {
                    <p>Correct Answer: @exam.Q06Navigation.CorrectCh</p>
                }
            </div>
            <div class="form-group Exam">
                <Label for="Ans7">@exam.Q07Navigation.QuesTitle</Label>
                <input type="text" class="form-control" id="Ans7" name="Ans7" value="@Model.Ans7" disabled />
                @if (exam.Q07Navigation.CorrectCh != null)
                {
                    <p>Correct Answer: @exam.Q07Navigation.CorrectCh</p>
                }
            </div>
            <div class="form-group Exam">
                <Label for="Ans8">@exam.Q08Navigation.QuesTitle</Label>
                <input type="text" class="form-control" id="Ans8" name="Ans8" value="@Model.Ans8" disabled />
                @if (exam.Q08Navigation.CorrectCh != null)
                {
                    <p>Correct Answer: @exam.Q08Navigation.CorrectCh</p>
