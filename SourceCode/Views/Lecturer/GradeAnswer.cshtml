                {
                    <p>Correct Answer: @exam.Q10Navigation.CorrectCh</p>
                }
            </div>
        }

        <div class="form-group">
            <Label for="AcheivedMark">Acheived Mark</Label>
            @Html.TextBoxFor(m => m.AcheivedMark, new { @class = "form-control"}) / @ViewBag.TotalMark
        </div>

        <div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>
