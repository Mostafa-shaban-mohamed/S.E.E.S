@model SourceCode.Models.AnswerTbl
@using SourceCode.Models

@{
    ViewData["Title"] = "Answer Paper";

    ExamTbl exam = ViewBag.Exam as ExamTbl;

}

<div class="col-md-9 crud-SEES">
    <h3>Exam</h3>
    <form asp-action="GradeAnswer" method="post">
        @Html.Hidden("ExamId", exam.ExamId)
        @Html.HiddenFor(m => m.AnsId)
        @Html.HiddenFor(m => m.StuCode)
        <input type="hidden" id="ExamType" value="@exam.Type" />
        <div class="form-group">
            <Label for="Ans1">@exam.Q01Navigation.QuesTitle</Label>
            <input type="text" class="form-control" id="Ans1" name="Ans1" value="@Model.Ans1" disabled />
            @if (exam.Q01Navigation.CorrectCh != null)
            {
                <p>Correct Answer: @exam.Q01Navigation.CorrectCh</p>
            }
        </div>

        <div class="form-group">
            <Label for="Ans2">@exam.Q02Navigation.QuesTitle</Label>
